<h1>Edit student details</h1>
<form action="/students/<%= @student.id %>" method="POST">


  <label for="first-name-field">First name:</label>
  <input id="first-name-field" type="text" name="first_name" value="<%= @student.first_name %>">

  <label for="second-name-field">Second Name:</label>
  <input id="second-name-field" type="text" name="second_name" value="<%= @student.second_name %>">


  <label for="house-select">Select a house:</label>
  <select id="house-select" name="house_id">
     <% for house in @houses do %>
     <% if house.id == @student.house_id %>
     <option value= <%= house.id %> selected><%= house.name %></option>
     <% else %>
     <option value= <%= house.id %>><%= house.name %></option>
     <% end %>
     <% end %>
  </select>

 <label for="age">Age:</label>
 <input id="age" type="number" name="age" value="<%= @student.age %>">

 <input type="submit" class="button" value="Save student"/>

</form>
